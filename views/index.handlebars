<h1>Eat Da Burger!</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Waiting to be Devoured!</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button class="devourBtn" data-id="{{id}}" data-devoured="{{devoured}}">DEVOUR!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h2>Devoured!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>{{burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h3>Add a burger!</h3>
            <form class="addBurger">
                <div class="form-group">
                    <input type="text" class="form-control" id="burger" name="name"
                        placeholder="Enter the name of your burger!">
                    <button type="submit" class="submitBtn btn btn-primary">Add Burger</button>
                </div>
            </form>
        </div>
    </div>
</div>